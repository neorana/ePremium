<Window x:Class="TimeRecorder.TimeZoneSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeRecorder"
        mc:Ignorable="d"
        Title="Time Zone Selection" Height="250" Width="400">
    <Grid>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="117,75,0,0" VerticalAlignment="Top" Width="150"/>
        <Label x:Name="label" Content="Time Zone" HorizontalAlignment="Left" Margin="39,72,0,0" VerticalAlignment="Top" Width="73"/>
        <Label x:Name="label1" Content="Start of Day" HorizontalAlignment="Left" Margin="40,121,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBox1" HorizontalAlignment="Left" Margin="217,124,0,0" VerticalAlignment="Top" Width="50" RenderTransformOrigin="2.036,0.616"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="117,124,0,0" TextWrapping="Wrap" Text="{Binding Date, StringFormat=hh:mmtt}" VerticalAlignment="Top" Width="95" />

    </Grid>
</Window>
